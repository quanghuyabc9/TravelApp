<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">
        <ImageView
            android:id="@+id/user_avatar_review_explore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icons8_customer_avatar_50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/user_name_review_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_avatar_review_explore"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />
        <ImageButton
            android:id="@+id/btn_report_review_explore"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/icons8_more_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:layout_marginRight="4dp"
            android:padding="10dp"
            android:focusable="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/container_star_review_explore"
            >

            <ImageView
                android:id="@+id/star_review_explore_1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star_border_black_24dp"/>
            <ImageView
                android:id="@+id/star_review_explore_2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star_border_black_24dp"/>
            <ImageView
                android:id="@+id/star_review_explore_3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star_border_black_24dp"/>
            <ImageView
                android:id="@+id/star_review_explore_4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star_border_black_24dp"/>
            <ImageView
                android:id="@+id/star_review_explore_5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star_border_black_24dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/create_date_review_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/container_star_review_explore"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_container_gray"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <TextView
            android:id="@+id/feedback_review_explore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#000000" />
    </RelativeLayout>

</LinearLayout>