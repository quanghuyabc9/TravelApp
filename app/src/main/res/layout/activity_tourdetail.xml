<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayout_tourdetail_maincontainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@color/white"
        android:id="@+id/appbarlayout_tourdetail_appbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/alternative_view"
                android:scaleType="fitXY"
                android:contentDescription="@string/image_description"/>
            <TextView
                android:id="@+id/textView_tourDetail_tourName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Tour name"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_alignParentBottom="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#99000000"
                android:gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/imagebutton_tourdetail_followtour"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/follow"
                android:background="@color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="70dp" />
           <ImageButton
               android:id="@+id/imagebutton_tourdetail_deletetour"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:scaleType="fitXY"
               android:src="@drawable/delete"
               android:background="@color/transparent"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="10dp" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_tourdetail_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextColor="@color/black"
            app:tabIndicatorColor="@color/black"
            android:layout_gravity="center"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpaper_tourdetail_mainview" />


</LinearLayout>